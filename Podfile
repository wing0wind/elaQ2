source 'https://github.com/CocoaPods/Specs.git'

use_frameworks!

def install_pods
    # Rx
    pod 'RxSwift'
    pod 'RxCocoa'

    # Network
    pod 'Alamofire'

    # Realm
    pod 'RealmSwift'

    # Network
    pod 'ReachabilitySwift'

    # AutoLayout
    pod 'SnapKit'

    # ImageDownloader
    pod 'SDWebImage'

    # Key Chain
    pod 'KeychainAccess'
    
    pod 'NVActivityIndicatorView'
end

# target list
targetArray= Array['elaQ']
for targetName in targetArray
    target targetName do
    	install_pods
    end
end
